<Window x:Class="MultiXIVLauncher.GroupLoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Launching Group..."
        Tag="LaunchGroupTitle"
        Height="160" Width="380"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        Background="#FF1E1E1E"
        Foreground="White"
        ShowInTaskbar="False"
        Topmost="True">

    <Grid Margin="15">
        <StackPanel VerticalAlignment="Center">

            <!-- Nom du groupe -->
            <TextBlock x:Name="GroupNameText"
                       Tag="LaunchGroup"
                       FontSize="14"
                       FontWeight="Bold"
                       Text="Launching group..."
                       Margin="0,0,0,10"
                       HorizontalAlignment="Center"/>

            <!-- Texte de progression -->
            <TextBlock x:Name="CharacterProgressText"
                       Tag="CharacterProgressText"
                       FontSize="12"
                       Text="Character 0/0"
                       Margin="0,0,0,10"
                       HorizontalAlignment="Center"/>

            <!-- Barre de progression -->
            <ProgressBar x:Name="ProgressBarLaunch"
                         Tag="GroupLaunchProgressBar"
                         Height="22"
                         Minimum="0"
                         Maximum="100"
                         Value="0"
                         Background="#FF2A2A2A"
                         Foreground="#FF2196F3"/>
        </StackPanel>
    </Grid>
</Window>
