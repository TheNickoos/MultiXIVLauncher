<UserControl x:Class="MultiXIVLauncher.Views.CharacterEditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:services="clr-namespace:MultiXIVLauncher.Services"
             Background="Transparent">

    <Grid Background="{StaticResource BgGradient}" Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Margin="0,0,0,12">
            <TextBlock services:LanguageBehavior.Key="Character_Edit_Label_Title"
                       Style="{StaticResource TitleText}"
                       Margin="0,0,0,8"/>

            <TextBox x:Name="TxtCharacterName"
                     Width="300"
                     Height="34"
                     Background="#1E1E2A"
                     Foreground="{StaticResource ClrTextPrimary}"
                     BorderBrush="{StaticResource ClrAccent}"
                     BorderThickness="1"
                     Padding="6,2"
                     Text="Lyna Jade"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Vertical" VerticalAlignment="Top">
            <Border Style="{StaticResource CardBorder}" Padding="16" Margin="0,0,0,12">
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock services:LanguageBehavior.Key="Character_Edit_Label_LodestoneID" 
                                   Width="120"
                                   VerticalAlignment="Center"
                                   Style="{StaticResource BodyText}" Opacity="0.8"/>

                        <Grid Width="220" Height="30">
                            <TextBox x:Name="TxtLodestoneId"
                                     Background="#1E1E2A"
                                     Foreground="{StaticResource ClrTextPrimary}"
                                     BorderBrush="{StaticResource ClrAccent}"
                                     BorderThickness="1"
                                     Padding="6,2"/>

                            <TextBlock Text="Entrez l'ID Lodestone..."
                                       Margin="10,0,0,0"
                                       VerticalAlignment="Center"
                                       Foreground="{StaticResource ClrTextPrimary}"
                                       Opacity="0.5"
                                       IsHitTestVisible="False">

                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding Text, ElementName=TxtLodestoneId}" Value=""/>
                                                    <Condition Binding="{Binding IsKeyboardFocused, ElementName=TxtLodestoneId}" Value="False"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </MultiDataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource CardBorder}" Padding="16" Margin="0,0,0,12">
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock services:LanguageBehavior.Key="Character_Edit_Label_Preset"
                                   Width="120"
                                   VerticalAlignment="Center"
                                   Style="{StaticResource BodyText}" Opacity="0.8"/>

                        <ComboBox x:Name="CmbPreset"
                                  Width="220" Height="30"
                                  Background="#1E1E2A"
                                  Foreground="{StaticResource ClrTextPrimary}"
                                  BorderBrush="{StaticResource ClrAccent}">

                            <ComboBoxItem Content="Aucun" IsSelected="True"/>
                            <ComboBoxItem Content="Preset 1"/>
                            <ComboBoxItem Content="Preset 2"/>
                            <ComboBoxItem Content="Preset 3"/>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource CardBorder}" Padding="16">
                <StackPanel Orientation="Vertical">
                    <TextBlock services:LanguageBehavior.Key="Character_Edit_Label_Folder"
                                   FontWeight="SemiBold" FontSize="16"
                                   Foreground="{StaticResource ClrTextPrimary}" Margin="0,0,0,8"/>

                    <TextBlock services:LanguageBehavior.Key="Character_Edit_Label_Folder2"
                                   Style="{StaticResource BodyText}" Opacity="0.8"
                                   TextWrapping="Wrap" Margin="0,0,0,12"/>

                    <Button services:LanguageBehavior.Key="Character_Edit_Button_OpenFolder"
                                Width="180" Height="34"
                                Style="{StaticResource RoundedButton}"
                                Click="OpenCharacterFolder_Click"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,12,0,0">
            <Button services:LanguageBehavior.Key="Character_Edit_Button_Save"
                    Width="140"
                    Height="34"
                    Margin="0,0,8,0"
                    Style="{StaticResource RoundedButton}"
                    Click="SaveCharacter_Click"/>

            <Button services:LanguageBehavior.Key="Character_Edit_Button_Back"
                    Width="120"
                    Height="34"
                    Style="{StaticResource OutlineButton}"
                    Click="GoBack_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
