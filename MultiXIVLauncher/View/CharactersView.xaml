<UserControl x:Class="MultiXIVLauncher.View.CharactersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:services="clr-namespace:MultiXIVLauncher.Services"
             Background="Transparent">

    <Grid Background="{StaticResource BgGradient}" Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Center"
                    Margin="0,0,0,12">
            <TextBlock services:LanguageBehavior.Key="Character_View_Title"
                        Style="{StaticResource TitleText}"
                        VerticalAlignment="Center"
                        Margin="0,0,12,0"/>

            <Button services:LanguageBehavior.Key="Character_View_Button_Add"
                    x:Name="BtnAddCharacter"
                    Height="34"
                    Margin="0,0,8,0"
                    Style="{StaticResource RoundedButton}"
                    Click="BtnAddCharacter_Click"/>

            <Button services:LanguageBehavior.Key="Character_View_Button_Validate"
                    x:Name="BtnValidate"
                    Height="34"
                    Visibility="Collapsed"
                    Margin="0,0,8,0"
                    Style="{StaticResource RoundedButton}"
                    Click="BtnValidate_Click"/>

            <TextBox x:Name="TxtCharacterName"
                     Width="200"
                     Height="32"
                     Visibility="Collapsed"
                     VerticalAlignment="Center"
                     Background="#1E1E2A"
                     Foreground="{StaticResource ClrTextPrimary}"
                     BorderBrush="{StaticResource ClrAccent}"
                     BorderThickness="1"
                     Padding="6,2"
                     Margin="0,0,8,0"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="CharacterListPanel">
                <Border Style="{StaticResource CardBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Vertical" Grid.Column="0">
                            <TextBlock Text="Lyna Jade"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource ClrTextPrimary}"/>
                            <TextBlock Text="Spriggan - Bard 90"
                                       Style="{StaticResource BodyText}"
                                       Opacity="0.8"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal"
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Right">
                            <Button services:LanguageBehavior.Key="Character_View_Button_Modify"
                                    Height="30"
                                    Margin="0,0,8,0"
                                    Style="{StaticResource OutlineButton}"/>

                            <Button services:LanguageBehavior.Key="Character_View_Button_Delete"
                                    Height="30"
                                    Style="{StaticResource OutlineButton}"/>
                        </StackPanel>
                    </Grid>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
