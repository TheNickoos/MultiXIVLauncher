<UserControl x:Class="MultiXIVLauncher.Views.GroupEditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:services="clr-namespace:MultiXIVLauncher.Services"
             Background="Transparent">

    <Grid Background="{StaticResource BgGradient}" Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Margin="0,0,0,12">
            <TextBlock services:LanguageBehavior.Key="Group_View_Edit_Label_Title"
                       Style="{StaticResource TitleText}" 
                       Margin="0,0,0,8"/>
            <TextBox x:Name="TxtGroupName"
                     Width="300"
                     Height="34"
                     Background="#1E1E2A"
                     Foreground="{StaticResource ClrTextPrimary}"
                     BorderBrush="{StaticResource ClrAccent}"
                     BorderThickness="1"
                     Padding="6,2"
                     Text=""/>
        </StackPanel>

        <StackPanel Grid.Row="1">
            <TextBlock services:LanguageBehavior.Key="Group_View_Edit_Label_Member"
                       Style="{StaticResource BodyText}" 
                       Margin="0,0,0,6"/>
            <ListBox x:Name="MembersList"
                     Background="#1E1E2A"
                     BorderBrush="{StaticResource ClrAccent}"
                     BorderThickness="1"
                     Foreground="{StaticResource ClrTextPrimary}"
                     Height="260"
                     ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="4,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                            <Button services:LanguageBehavior.Key="Group_View_Edit_Button_Remove"
                                    Grid.Column="1"
                                    Height="24"
                                    Margin="8,0,0,0"
                                    Style="{StaticResource OutlineButton}"
                                    Click="RemoveMember_Click"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,12,0,0">
            <Button services:LanguageBehavior.Key="Group_View_Edit_Button_AddMember"
                    Width="160"
                    Height="34"
                    Margin="0,0,8,0"
                    Style="{StaticResource RoundedButton}"
                    Click="OpenAddMemberWindow"/>
            <Button services:LanguageBehavior.Key="Group_View_Edit_Button_Back"
                    Width="120"
                    Height="34"
                    Style="{StaticResource OutlineButton}"
                    Click="GoBackToGroups"/>
        </StackPanel>
    </Grid>
</UserControl>
