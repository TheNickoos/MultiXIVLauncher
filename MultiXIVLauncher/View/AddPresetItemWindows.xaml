<Window x:Class="MultiXIVLauncher.Views.AddPresetItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:services="clr-namespace:MultiXIVLauncher.Services"
        services:LanguageBehavior.TitleKey="Window_Preset_Add_Item"
        Width="300" Height="240"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource ClrBgCard}"
        WindowStyle="ToolWindow">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ListBox x:Name="ItemList"
             Background="#1E1E2A"
             Foreground="{StaticResource ClrTextPrimary}"
             BorderBrush="{StaticResource ClrAccent}"
             BorderThickness="1">
            <ListBoxItem Content="Dalamud Plugin Loader"/>
            <ListBoxItem Content="Penumbra"/>
            <ListBoxItem Content="Glamourer"/>
            <ListBoxItem Content="SimpleTweaks"/>
            <ListBoxItem Content="EasyLauncher"/>
        </ListBox>

        <Button services:LanguageBehavior.Key="Window_Preset_Add_Button_Validate"
            Grid.Row="1"
            Height="34"
            Margin="0,12,0,0"
            Style="{StaticResource RoundedButton}"
            Click="Validate_Click"/>
    </Grid>
</Window>
