<Window x:Class="MultiXIVLauncher.View.PresetEditSelectCharacterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:services="clr-namespace:MultiXIVLauncher.Services"
        services:LanguageBehavior.TitleKey="Window_Preset_CopyChar_Title"
        Width="300"
        Height="400"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BgGradient}"
        BorderThickness="1"
        BorderBrush="{StaticResource ClrAccent}"
        WindowStyle="None"
        AllowsTransparency="True">

    <Border CornerRadius="10" Background="{StaticResource ClrBgCard}" Padding="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock services:LanguageBehavior.Key="Window_Preset_CopyChar_Text"
                       Style="{StaticResource BodyText}"
                       Margin="0,0,0,8"
                       Text="Select a character to copy configuration from:"/>

            <ListBox x:Name="CharacterList"
                     Grid.Row="1"
                     Background="#1E1E2A"
                     Foreground="{StaticResource ClrTextPrimary}"
                     BorderBrush="{StaticResource ClrAccent}"
                     BorderThickness="1"
                     SelectionMode="Single"
                     ScrollViewer.VerticalScrollBarVisibility="Auto">
            </ListBox>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                <Button Content="Cancel"
                        Width="100"
                        Height="34"
                        Margin="0,0,8,0"
                        Style="{StaticResource OutlineButton}"
                        Click="Cancel_Click"/>

                <Button services:LanguageBehavior.Key="Window_Preset_CopyChar_Button_Validate"
                        Width="120"
                        Height="34"
                        Style="{StaticResource RoundedButton}"
                        Click="Validate_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
