<Window x:Name="SettingsWindow1" x:Class="MultiXIVLauncher.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultiXIVLauncher"
        mc:Ignorable="d"
        Title="Settings" Height="450" Width="480" ResizeMode="NoResize" ShowInTaskbar="False">
    <Window.Resources>
        <Style TargetType="TabItem">
            <Setter Property="Background" Value="#FF272727"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF444444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border 
                        x:Name="Border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="4"
                        Margin="2,2,2,0"
                        Padding="{TemplateBinding Padding}">
                            <ContentPresenter 
                            x:Name="ContentSite"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            ContentSource="Header"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FF3C3C3C"/>
                                <Setter Property="Foreground" Value="#FFD5D5D5"/>
                            </Trigger>

                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FF383838"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Background="#FF272727">
        <Grid.RowDefinitions>
            <RowDefinition Height="0*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="43*"/>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="30*"/>
        </Grid.ColumnDefinitions>
        <TabControl Grid.RowSpan="2" Grid.ColumnSpan="3" Background="#FF272727">
            <TabItem Tag="ConfigurationTab" Header="Configuation" Background="#FF272727" Foreground="White" FontSize="10">
                <Grid Background="#FF272727">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="197*"/>
                        <ColumnDefinition Width="25*"/>
                        <ColumnDefinition Width="252*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="InputLauncherTextbox" HorizontalAlignment="Left" Margin="10,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="302" BorderThickness="0,0,0,1" Background="{x:Null}" Grid.ColumnSpan="3" Foreground="White" BorderBrush="#FF5B5B5B" FontSize="10"/>
                    <Label Tag="XIVLauncherPahInstruction" Content="Please select the folder where XIVlauncher is installed in. &#xA;It shlould contain XIVLauncher.exe" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Grid.ColumnSpan="3" Width="297" FontSize="10" FontFamily="Arial" Foreground="White" Height="31" FontWeight="Bold"/>
                    <Button x:Name="BrowseForLauncherButton" Grid.Column="2" Content="..." HorizontalAlignment="Left" VerticalAlignment="Top" Width="20" Background="#FF2196F3" Foreground="White" BorderBrush="Black" Margin="95,38,0,0" FontSize="10"/>
                    <ComboBox x:Name="LangageLauncherComboBox" HorizontalAlignment="Left"
          Margin="10,96,0,0"
          VerticalAlignment="Top"
          Width="302"
          Foreground="Black"
          Background="#FF272727"
          BorderBrush="#FF444444"
          BorderThickness="0,0,0,1" Grid.ColumnSpan="3" FontSize="10">
                        <ComboBox.Resources>
                            <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="#FF272727"/>
                            <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="#FF272727"/>

                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Background" Value="#FF272727"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Padding" Value="4,2"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF383838"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#FF505050"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>

                            <Style TargetType="ToggleButton">
                                <Setter Property="Background" Value="#FF272727"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Style>
                        </ComboBox.Resources>
                        <ComboBoxItem IsSelected="True" Tag="en">English</ComboBoxItem>
                    </ComboBox>
                    <Label Tag="LauncherLanguage" Content="MultiXIVLauncher Language" HorizontalAlignment="Left" Margin="10,71,0,0" VerticalAlignment="Top" Grid.ColumnSpan="3" Width="297" FontSize="10" FontFamily="Arial" Foreground="White" Height="23" FontWeight="Bold"/>
                </Grid>
            </TabItem>
            <TabItem Tag="CharactersTab" Header="Characters" Background="#FF272727" Foreground="White" FontSize="10">
                <Grid Background="#FF272727">
                    <ListBox x:Name="CharacterListBox" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,0,297,0" Background="#FF272727" Foreground="White" FontFamily="Arial" FontSize="10"/>
                    <Button Tag="CharacterAddButton" x:Name="CharacterAddButton" Content="Add a char" HorizontalAlignment="Left" Margin="187,348,0,0" VerticalAlignment="Top" Width="95" Background="#FF2196F3" Foreground="White"/>
                    <Grid x:Name="CharacterGrid">
                        <Rectangle x:Name="CharacterRectangle" HorizontalAlignment="Left" Height="333" Margin="187,10,0,0" Stroke="White" VerticalAlignment="Top" Width="250"/>
                        <Button Tag="SaveButton" x:Name="CharacterSaveButton" Content="Save" HorizontalAlignment="Left" Margin="367,304,0,0" VerticalAlignment="Top" Width="65" Background="#FF2196F3" Foreground="White"/>
                        <TextBox x:Name="CharacterNameTextBox" HorizontalAlignment="Left" Margin="287,26,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="145" Background="#FF2196F3" Foreground="White" FontFamily="Arial" FontSize="10" BorderBrush="#FF544848"/>
                        <Label Tag="CharacterName" x:Name="CharacterNameLabel" Content="Character name" HorizontalAlignment="Left" Margin="199,22,0,0" VerticalAlignment="Top" Width="88" FontSize="10" FontFamily="Arial" Foreground="White" FontWeight="Bold"/>
                        <ListBox x:Name="CharacterGroupListBox"
         SelectionMode="Multiple"
         Margin="287,46,42,249"
         FontFamily="Arial"
         FontSize="10"
         Background="#FF2196F3"
         Foreground="White">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Background" Value="#FF2196F3"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Margin" Value="1"/>
                                    <Setter Property="Padding" Value="4,2"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#FFFFC107"/>
                                            <Setter Property="Foreground" Value="Black"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FF64B5F6"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                        <Label Tag="Group" x:Name="CharacterGroupLabel" Content="Group" HorizontalAlignment="Left" Margin="199,45,0,0" VerticalAlignment="Top" Width="73" FontSize="10" FontFamily="Arial" Foreground="White" FontWeight="Bold"/>
                        <Button Tag="DeleteButton" x:Name="CharacterDeleteButton" Content="Delete" HorizontalAlignment="Left" Margin="287,304,0,0" VerticalAlignment="Top" Background="#FF2196F3" Foreground="White" Width="65"/>
                        <ComboBox x:Name="CharacterPresetComboBox" HorizontalAlignment="Left" Margin="287,163,0,0" VerticalAlignment="Top" Width="145"/>
                        <Label Tag="Preset" x:Name="CharacterPresetLabel" Content="Preset" HorizontalAlignment="Left" Margin="199,161,0,0" VerticalAlignment="Top" Width="73" Foreground="White" FontFamily="Arial" FontWeight="Bold"/>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Tag="Group" Header="Group" FontSize="10" HorizontalAlignment="Left" Width="49">
                <Grid>
                    <ListBox x:Name="GroupListbox" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,0,297,0" Background="#FF272727" Foreground="White" FontFamily="Arial" FontSize="10"/>
                    <Button Tag="GroupAddButton" x:Name="GroupAddButton" Content="Add a group" HorizontalAlignment="Left" Margin="187,348,0,0" VerticalAlignment="Top" Width="56" Background="#FF2196F3" Foreground="White"/>
                    <Grid x:Name="GroupGrid">
                        <Rectangle x:Name="GroupRectangle" HorizontalAlignment="Left" Height="333" Margin="187,10,0,0" Stroke="White" VerticalAlignment="Top" Width="250"/>
                        <Button Tag="SaveButton" x:Name="GroupSaveButton" Content="Save" HorizontalAlignment="Left" Margin="367,168,0,0" VerticalAlignment="Top" Width="65" Background="#FF2196F3" Foreground="White"/>
                        <TextBox x:Name="GroupNameTextBox" HorizontalAlignment="Left" Margin="287,26,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="145" Background="#FF2196F3" Foreground="White" FontFamily="Arial" FontSize="10" BorderBrush="#FF544848"/>
                        <Label Tag="GroupName" x:Name="GroupNameLabel" Content="Group name" HorizontalAlignment="Left" Margin="199,22,0,0" VerticalAlignment="Top" Width="88" FontSize="10" FontFamily="Arial" Foreground="White" FontWeight="Bold"/>
                        <Button Tag="DeleteButton" x:Name="GroupDeleteButton" Content="Delete" HorizontalAlignment="Left" Margin="287,168,0,0" VerticalAlignment="Top" Background="#FF2196F3" Foreground="White" Width="65"/>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Tag="Preset" Header="Preset">
                <Grid>
                    <ListBox x:Name="PresetListBox" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,0,297,0" Background="#FF272727" Foreground="White" FontFamily="Arial" FontSize="10"/>
                    <Button Tag="PresetAddButton" x:Name="PresetAddButton" Content="Add a preset" HorizontalAlignment="Left" Margin="187,348,0,0" VerticalAlignment="Top" Width="85" Background="#FF2196F3" Foreground="White"/>
                    <Button Tag="PresetDownloadTitle" x:Name="PresetDownloadButton" Content="Download a preset" Margin="280,348,37,0" VerticalAlignment="Top" Background="#FF2196F3" Foreground="White"/>
                    <Grid x:Name="PresetGrid">
                        <Rectangle x:Name="RectangleEdit" HorizontalAlignment="Left" Height="333" Margin="187,10,0,0" Stroke="White" VerticalAlignment="Top" Width="250"/>
                        <Button Tag="SaveButton" x:Name="PresetSaveButton" Content="Save" HorizontalAlignment="Left" Margin="367,168,0,0" VerticalAlignment="Top" Width="65" Background="#FF2196F3" Foreground="White"/>
                        <TextBox x:Name="PresetNameTextBox" HorizontalAlignment="Left" Margin="287,26,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="145" Background="#FF2196F3" Foreground="White" FontFamily="Arial" FontSize="10" BorderBrush="#FF544848"/>
                        <Label Tag="PresetName" x:Name="PresetNameLabel" Content="Preset name" HorizontalAlignment="Left" Margin="199,22,0,0" VerticalAlignment="Top" Width="88" FontSize="10" FontFamily="Arial" Foreground="White" FontWeight="Bold"/>
                        <Button Tag="PresetExploreButton" x:Name="PresetExploreButton" Content="Explore folder" Margin="204,131,42,0" VerticalAlignment="Top" Background="#FF2196F3" Foreground="White" Width="228"/>
                        <Button Tag="DeleteButton" x:Name="PresetDeleteButton" Content="Delete" Margin="0,167,0,0" VerticalAlignment="Top" Background="#FF2196F3" Foreground="White" Width="66"/>
                        <Button Tag="PresetCopyCharacterButton" x:Name="PresetCopyCharacterButton" Content="Copy character content into this preset" Margin="204,106,42,0" VerticalAlignment="Top" Background="#FF2196F3" Foreground="White" Width="228"/>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
