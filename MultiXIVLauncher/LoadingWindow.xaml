<Window x:Class="MultiXIVLauncher.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="NoResize"
        Height="100"
        Width="300"
        Background="#FF272727"
        WindowStartupLocation="CenterOwner"
        AllowsTransparency="True">
    <Grid>
        <Border CornerRadius="10" Background="#FF1E1E1E" BorderBrush="#FF3C3C3C" BorderThickness="2" Padding="10">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Launching Character..." Foreground="White" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center"/>
                <ProgressBar IsIndeterminate="True" Height="10" Margin="0,10,0,0" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
