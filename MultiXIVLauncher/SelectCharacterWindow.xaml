<Window x:Class="MultiXIVLauncher.SelectCharacterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select a Character"
        Tag="SelectCharacterTitle"
        Height="350" Width="400"
        WindowStartupLocation="CenterOwner"
        Background="#FF1E1E1E">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        
        <ListBox x:Name="CharacterListBox"
                 Tag="CharacterListBox"
                 Background="#FF2C2C2C"
                 Foreground="White"
                 BorderBrush="#FF3A3A3A"
                 FontFamily="Arial"
                 FontSize="12"
                 SelectionMode="Single"/>

        <StackPanel Orientation="Horizontal"
                    Grid.Row="1"
                    HorizontalAlignment="Right">
            <Button x:Name="OkButton"
                    Tag="OkButton"
                    Content="OK"
                    Width="80"
                    Margin="0,0,10,0"
                    Background="#FF2196F3"
                    Foreground="White"/>

            <Button x:Name="CancelButton"
                    Tag="CancelButton"
                    Content="Cancel"
                    Width="80"
                    Background="#FF555555"
                    Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
