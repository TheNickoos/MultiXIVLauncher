<Window x:Class="MultiXIVLauncher.PresetDownloadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Download a Preset"
        Tag="PresetDownloadTitle"
        Height="400" Width="700"
        Background="#1E1E1E" 
        Foreground="White" 
        FontFamily="Arial">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Liste des presets -->
        <ListBox x:Name="PresetListBox"
                 Tag="PresetListBox"
                 Grid.Column="0"
                 Background="#FF2C2C2C"
                 BorderBrush="#FF3A3A3A"
                 FontSize="12"
                 Foreground="White"
                 SelectionChanged="PresetListBox_SelectionChanged"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"/>

        <Grid Grid.Column="1" Margin="15,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Informations du preset -->
            <GroupBox Header="Preset Information"
                      Tag="PresetInformation"
                      x:Name="PresetInformation"
                      Background="#FF2C2C2C"
                      BorderBrush="#FF3A3A3A"
                      Padding="10"
                      FontWeight="Bold">
                <StackPanel>

                    <!-- Nom -->
                    <TextBlock x:Name="PresetName"
                               Tag="PresetName"
                               Text="Name:"
                               FontWeight="Bold"
                               FontSize="13"/>
                    <TextBlock x:Name="PresetNameText" 
                               Tag="PresetNameText"
                               FontSize="12" 
                               Margin="0,0,0,10"/>

                    <!-- Auteur -->
                    <TextBlock x:Name="PresetAuthor"
                               Tag="PresetAuthor"
                               Text="Author:" 
                               FontWeight="Bold" 
                               FontSize="13"/>
                    <TextBlock x:Name="PresetAuthorText" 
                               Tag="PresetAuthorText"
                               FontSize="12" 
                               Margin="0,0,0,10"/>

                    <!-- Version -->
                    <TextBlock x:Name="PresetVersion"
                               Tag="PresetVersion"
                               Text="Version:" 
                               FontWeight="Bold" 
                               FontSize="13"/>
                    <TextBlock x:Name="PresetVersionText" 
                               Tag="PresetVersionText"
                               FontSize="12" 
                               Margin="0,0,0,10"/>

                    <!-- Description -->
                    <TextBlock x:Name="PresetDescription"
                               Tag="PresetDescription"
                               Text="Description:" 
                               FontWeight="Bold" 
                               FontSize="13"/>
                    <TextBlock x:Name="PresetDescriptionText"
                               Tag="PresetDescriptionText"
                               FontSize="12"
                               TextWrapping="Wrap" 
                               Margin="0,0,0,10"/>

                    <!-- Plugins -->
                    <TextBlock x:Name="PresetPlugins"
                               Tag="PresetPlugins"
                               Text="Plugins:" 
                               FontWeight="Bold" 
                               FontSize="13"/>
                    <ListBox x:Name="PresetPluginsList"
                             Tag="PresetPluginsList"
                             Background="#FF2C2C2C"
                             BorderBrush="#FF3A3A3A"
                             Foreground="White"
                             Height="100"
                             FontSize="11"
                             Margin="0,5,0,0"/>
                </StackPanel>
            </GroupBox>

            <Button x:Name="DownloadButton"
                    Tag="PresetDownloadButton"
                    Grid.Row="2"
                    Content="Download this preset"
                    Height="30"
                    Margin="0,10,0,0"
                    HorizontalAlignment="Right"
                    Width="200"
                    Background="#FF2196F3"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="DownloadButton_Click"/>


            <ProgressBar x:Name="DownloadProgress"
                         Tag="PresetDownloadProgress"
                         Minimum="0"
                         Maximum="100"
                         Height="16"
                         Margin="0,8,0,0"
                         Foreground="#FF2196F3"
                         Visibility="Collapsed"/>

        </Grid>
    </Grid>
</Window>
