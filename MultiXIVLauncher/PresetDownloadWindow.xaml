<Window x:Class="MultiXIVLauncher.PresetDownloadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Download a Preset"
        Height="400" Width="700"
        Background="#1E1E1E" Foreground="White" FontFamily="Arial">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ListBox x:Name="PresetListBox"
                 Grid.Column="0"
                 Background="#FF2C2C2C"
                 BorderBrush="#FF3A3A3A"
                 FontSize="12"
                 Foreground="White"
                 SelectionChanged="PresetListBox_SelectionChanged"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 />

        <Grid Grid.Column="1" Margin="15,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <GroupBox Header="Preset Information"
                      Background="#FF2C2C2C"
                      BorderBrush="#FF3A3A3A"
                      Padding="10"
                      FontWeight="Bold">
                <StackPanel>
                    <TextBlock Text="Name:" FontWeight="Bold" FontSize="13"/>
                    <TextBlock x:Name="PresetNameText" FontSize="12" Margin="0,0,0,10"/>

                    <TextBlock Text="Author:" FontWeight="Bold" FontSize="13"/>
                    <TextBlock x:Name="PresetAuthorText" FontSize="12" Margin="0,0,0,10"/>

                    <TextBlock Text="Version:" FontWeight="Bold" FontSize="13"/>
                    <TextBlock x:Name="PresetVersionText" FontSize="12" Margin="0,0,0,10"/>

                    <TextBlock Text="Description:" FontWeight="Bold" FontSize="13"/>
                    <TextBlock x:Name="PresetDescriptionText" FontSize="12" TextWrapping="Wrap" Margin="0,0,0,10"/>

                    <TextBlock Text="Plugins:" FontWeight="Bold" FontSize="13"/>
                    <ListBox x:Name="PresetPluginsList"
                             Background="#FF2C2C2C"
                             BorderBrush="#FF3A3A3A"
                             Foreground="White"
                             Height="100"
                             FontSize="11"
                             Margin="0,5,0,0"
                             />
                </StackPanel>
            </GroupBox>

            <Button x:Name="DownloadButton"
                    Grid.Row="2"
                    Content="Download this preset"
                    Height="30"
                    Margin="0,10,0,0"
                    HorizontalAlignment="Right"
                    Width="200"
                    Background="#FF2196F3"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="DownloadButton_Click"/>

            <ProgressBar x:Name="DownloadProgress"
               Minimum="0"
               Maximum="100"
               Height="16"
               Margin="0,8,0,0"
               Foreground="#FF2196F3"
               Visibility="Collapsed"/>

        </Grid>
    </Grid>
</Window>
