<Window x:Class="MultiXIVLauncher.CopyProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CopyFilesTitle"
        xmlns:p="clr-namespace:MultiXIVLauncher.Properties"
        Height="130" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FF1E1E1E"
        Foreground="White"
        WindowStyle="ToolWindow">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Texte de statut -->
        <TextBlock x:Name="StatusText"
                   Text="CopyFiles"
                   Margin="5"
                   FontSize="13"
                   FontWeight="Bold"
                   TextAlignment="Center"
                   Grid.Row="0"/>

        <!-- Barre de progression -->
        <ProgressBar x:Name="ProgressBar"
                     Height="25"
                     Margin="0,10,0,0"
                     Grid.Row="1"
                     Minimum="0"
                     Maximum="100"
                     Value="0"
                     Foreground="#FF2196F3"
                     Background="#FF2C2C2C"/>
    </Grid>
</Window>
