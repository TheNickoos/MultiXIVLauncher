<Window x:Class="MultiXIVLauncher.Updater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update — MultiXIVLauncher"
        Width="520" Height="220"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource ClrBgCard}"
        Foreground="{StaticResource ClrTextPrimary}"
        AllowsTransparency="False" >
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Update in progess"
                   FontSize="20" FontWeight="Bold" Margin="0,0,0,8"/>

        <TextBlock x:Name="StatusText"
                   Grid.Row="1"
                   VerticalAlignment="Center"
                   Text="Preparing…"/>

        <ProgressBar x:Name="Progress"
                     Grid.Row="2"
                     Height="14"
                     Margin="0,10,0,0"
                     Minimum="0" Maximum="100" Value="0"/>

        <TextBox x:Name="LogBox"
                 Grid.Row="3"
                 Margin="0,16,0,10"
                 Background="#151521"
                 Foreground="{StaticResource ClrTextPrimary}"
                 BorderThickness="0"
                 IsReadOnly="True"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"/>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="CloseBtn" Style="{StaticResource RoundedButton}" Content="Fermer"
                    Click="CloseBtn_Click" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>
